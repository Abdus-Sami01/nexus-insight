# LLM (Free Groq + Local Ollama)
GROQ_API_KEY=YOUR_GROQ_API_KEY_HERE
GROQ_FAST_MODEL=llama-3.1-8b-instant
GROQ_REASONING_MODEL=llama-3.3-70b-versatile

OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_FAST_MODEL=qwen2.5:7b
OLLAMA_REASONING_MODEL=qwen2.5:72b

# Modes: groq | ollama | auto
LLM_MODE=auto

# Embeddings (Local/Free)
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_FALLBACK=all-MiniLM-L6-v2

# Web Search
SEARXNG_URL=http://searxng:8888
DDG_RATE_LIMIT_DELAY=1.1

# Media (Caches models in ~/.cache/huggingface)
WHISPER_MODEL=base

# Infrastructure
REDIS_URL=redis://redis:6379
OTEL_EXPORTER_ENDPOINT=http://otel-collector:4317

# API Auth
# Generate key: python -c "import secrets; print(secrets.token_hex(32))"
# Hash for .env: python -c "import hashlib; print(hashlib.sha256(b'YOUR_KEY').hexdigest())"
API_KEY_HASH=

# App
LOG_LEVEL=INFO
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8080
